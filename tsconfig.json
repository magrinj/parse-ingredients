{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "lib": ["es5","es6", "dom"],
    "sourceMap": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "declaration": true,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "baseUrl": "./",
    "paths": {
      "*": [
        "node_modules/@types/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ]
}
